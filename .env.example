# ─────────────────────────────────────────────────────────
# Quantum Digital Twin Platform - Environment Variables
# Copy to .env and fill in actual values
# ─────────────────────────────────────────────────────────

# ── Application ──────────────────────────────────────────
APP_NAME=Quantum Digital Twin Platform
APP_ENV=development                 # development | staging | production
DEBUG=true                          # Set to false in production
SECRET_KEY=CHANGE-ME-generate-a-random-64-char-string

# ── FastAPI Backend (Primary) ────────────────────────────
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_WORKERS=4                   # Uvicorn workers (production)
BACKEND_RELOAD=true                 # Auto-reload on code changes (dev only)

# ── Flask (legacy test compatibility) ────────────────────
FLASK_APP=dt_project.web_interface.app
FLASK_ENV=development

# ── Frontend (Next.js) ──────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:8000
NODE_ENV=development

# ── Database (PostgreSQL) ───────────────────────────────
DATABASE_URL=postgresql://qdtp_user:qdtp_pass@localhost:5434/qdtp_db
POSTGRES_USER=qdtp_user
POSTGRES_PASSWORD=qdtp_pass
POSTGRES_DB=qdtp_db
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ── Redis ───────────────────────────────────────────────
REDIS_URL=redis://localhost:6380/0
CACHE_TYPE=redis                    # redis | memory | simple
CACHE_DEFAULT_TIMEOUT=300

# ── Celery (async task queue) ───────────────────────────
CELERY_BROKER_URL=redis://localhost:6380/1
CELERY_RESULT_BACKEND=redis://localhost:6380/2

# ── Authentication / JWT ────────────────────────────────
JWT_SECRET_KEY=CHANGE-ME-generate-a-random-64-char-string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRES=3600       # seconds

# ── CORS ────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ── API Keys ────────────────────────────────────────────
# Weather
WEATHER_API_ENDPOINT=https://api.open-meteo.com/v1/forecast

# Geocoding (https://geocode.maps.co/)
GEOCODING_API_KEY=your-geocoding-api-key-here
GEOCODING_FORWARD_ENDPOINT=https://geocode.maps.co/search
GEOCODING_REVERSE_ENDPOINT=https://geocode.maps.co/reverse

# ── Quantum Provider ────────────────────────────────────
QUANTUM_BACKEND=aer_simulator
AI_PROVIDER=local                     # local | ollama | anthropic

# ── WebSocket ───────────────────────────────────────────
ENABLE_WEBSOCKET=true
WEBSOCKET_CORS_ORIGINS=*

# ── Monitoring / Observability ──────────────────────────
SENTRY_DSN=                         # Optional: your Sentry DSN
PROMETHEUS_MULTIPROC_DIR=./metrics
LOG_LEVEL=INFO                      # DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_FORMAT=json                     # json | text

# ── Rate Limiting ───────────────────────────────────────
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100              # requests per hour
RATE_LIMIT_API=1000
RATE_LIMIT_QUANTUM=10

# ── Feature Flags ───────────────────────────────────────
ENABLE_QUANTUM_FEATURES=true
ENABLE_HEALTHCARE_MODULE=true
ENABLE_GRAPHQL=true
ENABLE_METRICS=true

# ── Security ────────────────────────────────────────────
SESSION_LIFETIME=60                 # minutes
SECURE_COOKIES=false                # Set to true in production with HTTPS
CSRF_PROTECTION=true

# ─────────────────────────────────────────────────────────
# SECURITY WARNING:
# NEVER commit real API keys, tokens, or passwords to version control.
# Use a secrets manager (Vault, AWS Secrets Manager, etc.) in production.
# ─────────────────────────────────────────────────────────
